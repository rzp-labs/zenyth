# EditorConfig for AI Coding Agent Projects
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88

# Python files - optimized for AI/ML development
[*.py]
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true

# JavaScript/TypeScript - common in AI tooling
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

# JSON files - configuration and data exchange
[*.json]
indent_size = 2
insert_final_newline = false

# YAML files - common for AI model configs and CI/CD
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

# TOML files - Python packaging and configuration
[*.toml]
indent_size = 4

# Markdown documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts for automation
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Jupyter notebooks metadata
[*.ipynb]
indent_size = 2
insert_final_newline = false

# Requirements and lock files
[{requirements*.txt,Pipfile,poetry.lock}]
insert_final_newline = true
trim_trailing_whitespace = true

# Configuration files
[{.env,.env.*,*.ini,*.cfg}]
indent_size = 4
trim_trailing_whitespace = true

# Web assets (if building AI web interfaces)
[*.{css,scss,sass}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

# XML configuration files
[*.xml]
indent_size = 2

# SQL files for data processing
[*.sql]
indent_size = 2
